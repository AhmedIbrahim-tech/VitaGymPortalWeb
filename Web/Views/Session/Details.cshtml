@using Core.Modules.Sessions.ViewModels
@model SessionViewModel
@{
    ViewData["Title"] = "Session Details";
    var statusClass = Model.Status == "Ongoing" ? "success" :
                      Model.Status == "Upcoming" ? "primary" : "secondary";

    var bookedSlots = Model.Capacity - Model.AvailableSlots;
    var capacityPercentage = Model.Capacity > 0
        ? (bookedSlots * 100.0 / Model.Capacity)
        : 0;
}

<!-- Typography Styles -->
<style>
    .session-title { font-size: 2.8rem; font-weight: 700; }
    .session-badge { font-size: 1.2rem; }
    .session-description { font-size: 1.15rem; line-height: 1.7; }

    .session-label {
        font-size: 0.9rem;
        font-weight: 600;
        letter-spacing: .5px;
        text-transform: uppercase;
    }

    .session-value-large { font-size: 1.6rem; font-weight: 700; }
    .session-value-medium { font-size: 1.2rem; font-weight: 600; }

    .session-btn { font-size: 1.15rem !important; }

    .detail-item { background: #f8f9fa; }
</style>

<partial name="_AlertMessages" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-lg border rounded-5">

                <!-- Header Section -->
                <div class="card-header bg-@statusClass text-white text-center py-5 rounded-top-5">
                    <div class="mb-3">
                        <i class="bi bi-calendar-event display-2"></i>
                    </div>

                    <h1 class="session-title text-white">@Model.CategoryName</h1>

                    <span class="badge bg-light text-@statusClass px-4 py-2 rounded-pill session-badge">
                        @Model.Status
                    </span>
                </div>

                <!-- Body -->
                <div class="card-body p-4 p-md-5">

                    <!-- Description -->
                    <div class="mb-5 pb-4 border-bottom">
                        <h4 class="fw-semibold d-flex align-items-center mb-3">
                            <i class="bi bi-file-text text-primary me-2 fs-4"></i>
                            Description
                        </h4>

                        <p class="session-description text-muted mb-0">
                            @Model.Description
                        </p>
                    </div>

                    <!-- Info Grid -->
                    <div class="row g-4 mb-4">

                        <!-- TRAINER -->
                        <div class="col-md-6">
                            <div class="detail-item p-4 border rounded-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-primary-subtle rounded-circle p-4 me-3">
                                        <i class="bi bi-person-circle text-primary fs-2"></i>
                                    </div>
                                    <div>
                                        <div class="session-label text-muted">Trainer</div>
                                        <div class="session-value-large">@Model.TrainerName</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- CAPACITY -->
                        <div class="col-md-6">
                            <div class="detail-item p-4 border rounded-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-info-subtle rounded-circle p-4 me-3">
                                        <i class="bi bi-people text-info fs-2"></i>
                                    </div>

                                    <div class="flex-grow-1">
                                        <div class="session-label text-muted">Capacity</div>

                                        <div class="session-value-large">
                                            <span class="text-success">@bookedSlots</span>/<span>@Model.Capacity</span> booked
                                        </div>

                                        <div class="progress mt-3" style="height: 8px;">
                                            <div class="progress-bar bg-@(capacityPercentage >= 80 ? "danger" : capacityPercentage >= 50 ? "warning" : "success")"
                                                 role="progressbar"
                                                 style="width:@capacityPercentage%">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- START DATE -->
                        <div class="col-md-6">
                            <div class="detail-item p-4 border rounded-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-success-subtle rounded-circle p-4 me-3">
                                        <i class="bi bi-calendar-check text-success fs-2"></i>
                                    </div>

                                    <div>
                                        <div class="session-label text-muted">Start Date & Time</div>
                                        <div class="session-value-medium">@Model.DateDisplay</div>
                                        <div class="text-muted session-value-small">@Model.StartDate.ToString("hh:mm tt")</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- END DATE -->
                        <div class="col-md-6">
                            <div class="detail-item p-4 border rounded-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-danger-subtle rounded-circle p-4 me-3">
                                        <i class="bi bi-calendar-x text-danger fs-2"></i>
                                    </div>

                                    <div>
                                        <div class="session-label text-muted">End Date & Time</div>
                                        <div class="session-value-medium">@Model.EndDate.ToString("MMM dd, yyyy")</div>
                                        <div class="text-muted session-value-small">@Model.EndDate.ToString("hh:mm tt")</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- DURATION -->
                        <div class="col-12">
                            <div class="detail-item p-4 border rounded-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-warning-subtle rounded-circle p-4 me-3">
                                        <i class="bi bi-hourglass-split text-warning fs-2"></i>
                                    </div>

                                    <div>
                                        <div class="session-label text-muted">Duration</div>

                                        <div class="session-value-large text-primary">
                                            @if (Model.Duration.Hours > 0)
                                            {
                                                <text>@Model.Duration.Hours hour@(Model.Duration.Hours > 1 ? "s" : "")</text>
                                            }
                                            @if (Model.Duration.Minutes > 0)
                                            {
                                                <text> @Model.Duration.Minutes minute@(Model.Duration.Minutes > 1 ? "s" : "")</text>
                                            }
                                            @if (Model.Duration.Hours == 0 && Model.Duration.Minutes == 0)
                                            {
                                                <text>Less than a minute</text>
                                            }
                                        </div>

                                        <div class="text-muted session-value-medium mt-2">
                                            @Model.TimeRangeDisplay
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-center gap-3 pt-4 border-top">
                        <a asp-action="Index"
                           class="btn btn-outline-secondary session-btn d-flex align-items-center gap-2 px-5">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>

                        @if (Model.Status == "Upcoming")
                        {
                            <a asp-action="Edit"
                               asp-route-id="@Model.Id"
                               class="btn btn-primary session-btn d-flex align-items-center gap-2 px-5">
                                <i class="bi bi-pencil"></i> Edit Session
                            </a>
                        }
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_AlertBoxScript" />
}
