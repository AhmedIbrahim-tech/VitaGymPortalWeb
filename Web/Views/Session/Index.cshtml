@using Core.ViewModels.SessionViewModels
@model IEnumerable<SessionViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<partial name="_AlertMessages" />

<div class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold mb-2 d-flex align-items-center gap-2">
                <i class="bi bi-calendar-event fs-1"></i>
                <span>Training Sessions</span>
            </h2>
            <p class="text-muted mb-0">Manage gym training sessions and classes</p>
        </div>
        <a asp-controller="Session" asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 mt-2 mt-sm-0">
            <i class="bi bi-plus-lg"></i> Add Session
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var session in Model)
            {
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="card h-100 shadow-sm border rounded-4 session-card">
                        <div class="card-header text-white py-3 rounded-top-4 border-bottom @(session.Status == "Ongoing" ? "bg-success" : session.Status == "Upcoming" ? "bg-primary" : "bg-secondary") ">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-calendar-event me-2"></i>@session.CategoryName
                                </h5>
                                <span class="badge bg-light text-dark">@session.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">@session.Description</p>

                            <div class="session-info mb-3">
                                <div class="info-item mb-2">
                                    <i class="bi bi-person-circle text-primary-color me-2"></i>
                                    <strong>Trainer:</strong> @session.TrainerName
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-calendar3 text-primary-color me-2"></i>
                                    <strong>Date:</strong> @session.DateDisplay
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-clock text-primary-color me-2"></i>
                                    <strong>Time:</strong> @session.TimeRangeDisplay
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-hourglass-split text-primary-color me-2"></i>
                                    <strong>Duration:</strong> @session.Duration
                                </div>
                                <div class="info-item">
                                    <i class="bi bi-people text-primary-color me-2"></i>
                                    <strong>Capacity:</strong> @session.AvailableSlots/@session.Capacity slots
                                </div>
                            </div>
                        </div>
                        <div class="card-footer border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>View Details
                                </a>
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-outline-warning btn-sm flex-fill">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@session.Id" class="btn btn-outline-danger btn-sm flex-fill">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <partial name="_EmptyState" model="@((string)null)" />
    }
</div>
