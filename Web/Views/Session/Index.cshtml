@using Core.Modules.Sessions.ViewModels
@model IEnumerable<SessionViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<partial name="_AlertMessages" />

<partial name="_PageHeader" model="@("Training Sessions")" view-data='new ViewDataDictionary(ViewData) { { "PageSubtitle", "Manage gym training sessions and classes" }, { "PageIcon", "calendar-event" }, { "ShowActionButton", true }, { "ActionButtonText", "Add Session" }, { "ActionButtonUrl", Url.Action("Create", "Session") } }' />

@if (Model != null && Model.Any())
{
	<div class="card">
		<div class="card-body p-0">
			<div class="table-responsive">
				<table class="table datatable">
					<thead class="thead-light">
						<tr>
							<th class="no-sort">
								<label class="checkboxs">
									<input type="checkbox" id="select-all">
									<span class="checkmarks"></span>
								</label>
							</th>
							<th>Category</th>
							<th>Trainer</th>
							<th class="d-none d-md-table-cell">Description</th>
							<th>Date</th>
							<th class="d-none d-lg-table-cell">Time</th>
							<th class="d-none d-lg-table-cell">Duration</th>
							<th>Capacity</th>
							<th>Status</th>
							<th class="no-sort"></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var session in Model)
						{
							<tr>
								<td>
									<label class="checkboxs">
										<input type="checkbox">
										<span class="checkmarks"></span>
									</label>
								</td>
								<td>@session.CategoryName</td>
								<td>@session.TrainerName</td>
								<td class="d-none d-md-table-cell">@(session.Description?.Length > 50 ? session.Description.Substring(0, 50) + "..." : session.Description)</td>
								<td>@session.DateDisplay</td>
								<td class="d-none d-lg-table-cell">@session.TimeRangeDisplay</td>
								<td class="d-none d-lg-table-cell">@session.DurationDisplay</td>
								<td>@session.CapacityDisplay</td>
								<td>
									@if (session.Status == "Ongoing")
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-success fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>@session.Status
										</span>
									}
									else if (session.Status == "Upcoming")
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-primary fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>@session.Status
										</span>
									}
									else
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-secondary fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>@session.Status
										</span>
									}
								</td>
								<td class="action-table-data">
									<div class="edit-delete-action">
										<a asp-action="Details" asp-route-id="@session.Id" class="btn btn-icon btn-soft-info rounded-pill" title="View Details">
											<i data-feather="eye" class="feather-edit"></i>
										</a>
										<a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-icon btn-soft-success rounded-pill" title="Edit">
											<i data-feather="edit" class="feather-edit"></i>
										</a>
										<button type="button" 
												class="btn btn-icon btn-soft-danger rounded-pill" 
												title="Delete"
												data-bs-toggle="modal" 
												data-bs-target="#deleteModal_@session.Id">
												<i data-feather="trash-2" class="feather-trash-2"></i>
											</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
}
else
{
	<partial name="_EmptyState" />
}

@foreach (var session in Model)
{
	var modalId = "deleteModal_" + session.Id;
	var message = "Are you sure you want to delete the session '" + session.CategoryName + "'? This action cannot be undone.";
	
	var deleteModalViewData = new ViewDataDictionary(ViewData);
	deleteModalViewData["DeleteUrl"] = Url.Action("Delete", "Session");
	deleteModalViewData["ModalId"] = modalId;
	deleteModalViewData["Title"] = "Delete Session";
	deleteModalViewData["Message"] = message;
	deleteModalViewData["EntityId"] = session.Id;
	
	<partial name="_DeleteModal" view-data="deleteModalViewData" />
}

@section Scripts {
	<partial name="_AlertBoxScript" />
	<script>
		$(document).ready(function () {
			if (feather) {
				feather.replace();
			}
		});
	</script>
}
