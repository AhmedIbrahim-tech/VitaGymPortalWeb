@using Core.ViewModels.PlanViewModels
@model UpdatePlanViewModel
@{
    ViewData["Title"] = "Edit Plan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mb-5">
    @Html.ValidationMessage("WrongData", new { @class = "alert alert-danger" })

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-primary rounded-4">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center gap-2 mb-4">
                        <i class="bi bi-pencil-square fs-1 text-primary"></i>
                        <div>
                            <h3 class="fw-bold text-primary mb-0">Edit Plan</h3>
                            <p class="text-muted mb-0">Update plan details</p>
                        </div>
                    </div>
                    <form asp-action="Edit" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="PlanName" class="form-label fw-semibold">
                                    Plan Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="PlanName" class="form-control" readonly />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DurationDays" class="form-label fw-semibold">
                                    Duration (Days) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DurationDays" type="number" class="form-control" />
                                <small class="text-muted">e.g., 30 days = 1 month</small>
                                <span asp-validation-for="DurationDays" class="text-danger d-block"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-semibold">
                                    Price (EGP) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-semibold">
                                    Description <span class="text-danger">*</span>
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between gap-3 border-top pt-4 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                                <i class="bi bi-check-lg"></i> Update Plan
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}