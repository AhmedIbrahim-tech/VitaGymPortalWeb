@using Core.Modules.Plans.ViewModels
@model IEnumerable<PlanViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<partial name="_AlertMessages" />

<partial name="_PageHeader" model="@("Membership Plans")" view-data='new ViewDataDictionary(ViewData) { { "PageSubtitle", "Manage your gym membership packages" }, { "PageIcon", "award" }, { "ShowActionButton", true }, { "ActionButtonText", "Add Plan" }, { "ActionButtonUrl", Url.Action("Create", "Plan") } }' />

@if (Model != null && Model.Any())
{
	<div class="card">
		<div class="card-body p-0">
			<div class="table-responsive">
				<table class="table datatable">
					<thead class="thead-light">
						<tr>
							<th class="no-sort">
								<label class="checkboxs">
									<input type="checkbox" id="select-all">
									<span class="checkmarks"></span>
								</label>
							</th>
							<th>Name</th>
							<th>Price</th>
							<th class="d-none d-md-table-cell">Duration</th>
							<th>Status</th>
							<th class="no-sort"></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var plan in Model)
						{
							<tr>
								<td>
									<label class="checkboxs">
										<input type="checkbox">
										<span class="checkmarks"></span>
									</label>
								</td>
								<td>@plan.Name</td>
								<td>@plan.Price.ToString("N0") EGP</td>
								<td class="d-none d-md-table-cell">@plan.DurationDays days</td>
								<td>
									@if (plan.IsActive)
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-success fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>Active
										</span>
									}
									else
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-danger fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>Inactive
										</span>
									}
								</td>
								<td class="action-table-data">
									<div class="edit-delete-action">
										<a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-icon btn-soft-info rounded-pill" title="View Details">
											<i data-feather="eye" class="feather-edit"></i>
										</a>
										<a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-icon btn-soft-success rounded-pill" title="Edit">
											<i data-feather="edit" class="feather-edit"></i>
										</a>
										@if (!plan.HasMembers)
										{
											<form asp-action="ToggleStatus" asp-route-id="@plan.Id" method="post" class="d-inline">
												<button type="submit" class="btn btn-icon @(plan.IsActive ? "btn-soft-info" : "btn-soft-success") rounded-pill" title="@(plan.IsActive ? "Deactivate" : "Activate")">
													<i data-feather="@(plan.IsActive ? "x-circle" : "check-circle")" class="feather-edit"></i>
												</button>
											</form>
											<button type="button" 
													class="btn btn-icon btn-soft-danger rounded-pill" 
													title="Delete"
													data-bs-toggle="modal" 
													data-bs-target="#deleteModal_@plan.Id">
													<i data-feather="trash-2" class="feather-trash-2"></i>
												</button>
										}
										else
										{
											<button type="button" class="btn btn-icon btn-soft-secondary rounded-pill" title="Cannot activate/deactivate plan with members" disabled>
												<i data-feather="lock" class="feather-edit"></i>
											</button>
										}
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
}
else
{
	<partial name="_EmptyState" />
}

@foreach (var plan in Model)
{
	var modalId = "deleteModal_" + plan.Id;
	var message = "Are you sure you want to delete the plan '" + plan.Name + "'? This action cannot be undone.";
	
	var deleteModalViewData = new ViewDataDictionary(ViewData);
	deleteModalViewData["DeleteUrl"] = Url.Action("Delete", "Plan");
	deleteModalViewData["ModalId"] = modalId;
	deleteModalViewData["Title"] = "Delete Plan";
	deleteModalViewData["Message"] = message;
	deleteModalViewData["EntityId"] = plan.Id;
	
	<partial name="_DeleteModal" view-data="deleteModalViewData" />
}

@section Scripts {
	<partial name="_AlertBoxScript" />
	<script>
		$(document).ready(function () {
			if (feather) {
				feather.replace();
			}
		});
	</script>
}