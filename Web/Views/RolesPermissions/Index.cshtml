@using Core.ViewModels.RoleViewModels
@model IEnumerable<RoleViewModel>

<partial name="_AlertMessages" />

<partial name="_PageHeader" model="@((string)null)" />

@if (Model != null && Model.Any())
{
	<div class="card">
		<div class="card-body p-0">
			<div class="table-responsive">
				<table class="table datatable">
					<thead class="thead-light">
						<tr>
							<th class="no-sort">
								<label class="checkboxs">
									<input type="checkbox" id="select-all">
									<span class="checkmarks"></span>
								</label>
							</th>
							<th>Role</th>
							<th>Created Date</th>
							<th>Status</th>
							<th class="no-sort"></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var role in Model)
						{
							<tr>
								<td>
									<label class="checkboxs">
										<input type="checkbox">
										<span class="checkmarks"></span>
									</label>
								</td>
								<td>@role.Name</td>
								<td>@role.CreatedDate.ToString("dd MMM yyyy")</td>
								<td>
									@if (role.IsActive)
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-success fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>Active
										</span>
									}
									else
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-danger fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>Inactive
										</span>
									}
								</td>
								<td class="action-table-data">
									<div class="edit-delete-action">
										<a asp-action="Permissions" asp-route-id="@role.Id" class="btn btn-icon btn-soft-info rounded-pill" title="Permissions">
											<i data-feather="shield" class="feather-edit"></i>
										</a>
										<a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-icon btn-soft-success rounded-pill" title="Edit">
											<i data-feather="edit" class="feather-edit"></i>
										</a>
										<form asp-action="ToggleStatus" asp-route-id="@role.Id" method="post" class="d-inline">
											<button type="submit" class="btn btn-icon @(role.IsActive ? "btn-soft-info" : "btn-soft-success") rounded-pill" title="@(role.IsActive ? "Deactivate" : "Activate")">
												<i data-feather="@(role.IsActive ? "x-circle" : "check-circle")" class="feather-edit"></i>
											</button>
										</form>
										<form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline"
											  onsubmit="return confirm('Are you sure you want to delete this role?');">
											<button type="submit" class="btn btn-icon btn-soft-danger rounded-pill" title="Delete">
												<i data-feather="trash-2" class="feather-trash-2"></i>
											</button>
										</form>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
}
else
{
	<partial name="_EmptyState" />
}

@section Scripts {
	<partial name="_AlertBoxScript" />
	<script>
		$(document).ready(function () {
			if (feather) {
				feather.replace();
			}
		});
	</script>
}

