@{
    ViewData["Title"] = "Delete Trainer";
}

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-warning display-1"></i>
                    </div>
                    <h3 class="text-primary mb-3">Delete Trainer</h3>
                    <p class="fs-5 text-muted mb-4">Are you sure you want to delete this trainer?</p>

                    <div class="alert alert-warning text-start mb-4" role="alert">
                        <strong><i class="bi bi-info-circle me-2"></i>Warning:</strong>
                        This action cannot be undone. All trainer data will be permanently deleted.
                    </div>

                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        <input type="hidden" name="id" value="@ViewBag.TrainerId" />
                        <div class="d-flex justify-content-between gap-3">
                            <a asp-controller="Trainer" asp-action="Index" class="btn btn-outline-secondary flex-fill d-flex align-items-center justify-content-center gap-2">
                                <i class="bi bi-x-lg"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger flex-fill d-flex align-items-center justify-content-center gap-2">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>