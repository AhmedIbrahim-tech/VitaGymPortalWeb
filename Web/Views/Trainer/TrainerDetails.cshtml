@using Core.Modules.Trainers.ViewModels
@model TrainerViewModel
@{
    ViewData["Title"] = "Trainer Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border rounded-5">
                <div class="card-header bg-primary-color text-center py-5">
                    <div class="mb-3">
                        @if (Model.Photo != null)
                        {
                            <img src="~/images/trainers/@Model.Photo"
                                 alt="Trainer photo"
                                 class="img-fluid rounded-circle border border-3 border-white shadow-lg"
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="~/images/user.png"
                                 alt="Trainer photo"
                                 class="img-fluid rounded-circle border border-3 border-white shadow-lg"
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        }
                    </div>
                    <h2 class="mb-0">@Model.Name</h2>
                    <span class="badge bg-primary mt-2">@Model.specialization Trainer</span>
                </div>
                <div class="card-body p-4">
                    <div class="plan-details">
                        <div class="detail-item mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <div class="icon-box me-3">
                                    <i class="bi bi-envelope text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Email</h6>
                                    <p class="mb-0 fw-bold">@Model.Email</p>
                                </div>
                            </div>
                        </div>

                        <div class="detail-item mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <div class="icon-box me-3">
                                    <i class="bi bi-telephone text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Phone</h6>
                                    <p class="mb-0 fw-bold">@Model.Phone</p>
                                </div>
                            </div>
                        </div>

                        <div class="detail-item mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <div class="icon-box me-3">
                                    <i class="bi bi-gender-ambiguous text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Gender</h6>
                                    <p class="mb-0 fw-bold">@Model.Gender</p>
                                </div>
                            </div>
                        </div>

                        <div class="detail-item mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <div class="icon-box me-3">
                                    <i class="bi bi-calendar-date text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Date Of Birth</h6>
                                    <p class="mb-0 fw-bold">@Model.DateOfBirth</p>
                                </div>
                            </div>
                        </div>

                        <div class="detail-item mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <div class="icon-box me-3">
                                    <i class="bi bi-geo-alt text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Address</h6>
                                    <p class="mb-0 fw-bold">@(Model.Address ?? "N/A")</p>
                                </div>
                            </div>
                        </div>

                        <div class="detail-item mb-4">
                            <div class="d-flex align-items-start mb-2">
                                <div class="icon-box me-3">
                                    <i class="bi bi-award text-primary-color fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-2 text-muted">Specialization</h6>
                                    <div>
                                        @if (!string.IsNullOrEmpty(Model.specialization) && Model.specialization != "N/A")
                                        {
                                            var specializations = Model.specialization.Split(',');
                                            @foreach (var spec in specializations)
                                            {
                                                <span class="badge bg-primary-subtle text-primary-emphasis rounded-pill px-3 py-1 me-2 mb-2">@spec.Trim()</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill px-3 py-1">N/A</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="detail-item mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <div class="icon-box me-3">
                                    <i class="bi bi-check-circle text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Status</h6>
                                    <p class="mb-0">
                                        <span class="badge bg-success-subtle text-success-emphasis rounded-pill px-3 py-1">Active</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center px-3 pb-3">
                            <a asp-controller="Trainer" asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>