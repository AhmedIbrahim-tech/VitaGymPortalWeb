@using Core.Modules.Trainers.ViewModels
@model CreateTrainerViewModel
@{
	ViewData["Title"] = "Create Trainer";
}

<div class="container mb-5">
    <div class="card shadow-lg border rounded-4">
        <div class="card-body p-4 p-md-5">
            <div class="d-flex align-items-center gap-2 mb-4">
                <i class="bi bi-person-plus fs-1 text-primary"></i>
                <div>
                    <h3 class="fw-bold text-primary mb-0">Add New Trainer</h3>
                    <p class="text-muted mb-0">Fill in the trainer information below</p>
                </div>
            </div>

            <form method="post" asp-action="CreateTrainer" enctype="multipart/form-data" novalidate>

                <!-- Personal Information -->
                <div class="mb-5">
                    <h5 class="fw-bold text-secondary border-start border-4 border-primary ps-2 mb-3">
                        <i class="bi bi-person-circle me-2"></i>Personal Information
                    </h5>
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="PhotoFile" class="form-label">Profile Photo</label>
                            <div class="mb-3">
                                <img id="photoPreview" src="" alt="Photo Preview" 
                                     style="max-width: 150px; max-height: 150px; display: none;" 
                                     class="rounded-circle border border-3 border-primary shadow-sm" />
                            </div>
                            <input asp-for="PhotoFile" type="file" class="form-control" accept="image/jpeg,image/jpg,image/png" id="photoInput" />
                            <span asp-validation-for="PhotoFile" class="text-danger"></span>
                            <small class="form-text text-muted">Max size: 5 MB. Allowed types: JPG, PNG, JPEG</small>
                        </div>
            <div class="col-12 col-md-6">
                <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Phone" class="form-label">Phone <span class="text-danger">*</span></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="DateOfBirth" class="form-label">Date Of Birth <span class="text-danger">*</span></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Gender" class="form-label fw-semibold">Gender <span class="text-danger">*</span></label>
                            <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<Gender>()">
                                <option value="">-- Select Gender --</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Address Information -->
                <div class="mb-5">
                    <h5 class="fw-bold text-secondary border-start border-4 border-success ps-2 mb-3">
                        <i class="bi bi-geo-alt me-2"></i>Address Information
                    </h5>
                    <div class="row g-3">

            <div class="col-12 col-md-6">
                <label asp-for="BuildingNumber" class="form-label"></label>
                <input asp-for="BuildingNumber" class="form-control" />
                <span asp-validation-for="BuildingNumber" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Street" class="form-label">Street <span class="text-danger">*</span></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
                        <div class="col-12 col-md-6">
                            <label asp-for="City" class="form-label fw-semibold">City <span class="text-danger">*</span></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Professional Information -->
                <div class="mb-5">
                    <h5 class="fw-bold text-secondary border-start border-4 border-info ps-2 mb-3">
                        <i class="bi bi-award me-2"></i>Professional Information
                    </h5>
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-semibold">
                                Specialization <span class="text-danger">*</span>
                            </label>
                            <div class="d-flex flex-wrap gap-3">
                                @foreach (var speciality in Enum.GetValues(typeof(Specialities)))
                                {
                                    <div class="form-check">
                                        <input type="checkbox" name="Specializations" value="@speciality" id="@speciality" class="form-check-input specialization-checkbox" />
                                        <label class="form-check-label" for="@speciality">@speciality</label>
                                    </div>
                                }
                            </div>
                            <input type="hidden" id="Specialization" name="Specialization" />
                            <span class="text-danger" id="specialization-error"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3 border-top pt-4 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="bi bi-check-lg"></i> Add Trainer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Preview photo before upload
        document.getElementById('photoInput').addEventListener('change', function(e) {
            var file = e.target.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var preview = document.getElementById('photoPreview');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });

        // Handle multi-specialization
        document.querySelectorAll('.specialization-checkbox').forEach(function(checkbox) {
            checkbox.addEventListener('change', function() {
                var selected = Array.from(document.querySelectorAll('.specialization-checkbox:checked'))
                    .map(cb => cb.value)
                    .join(',');
                document.getElementById('Specialization').value = selected;
            });
        });

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            var selected = Array.from(document.querySelectorAll('.specialization-checkbox:checked'));
            if (selected.length === 0) {
                e.preventDefault();
                document.getElementById('specialization-error').textContent = 'Please select at least one specialization.';
                return false;
            }
            document.getElementById('specialization-error').textContent = '';
        });
    </script>
}
