@using Core.ViewModels.TrainerViewModels
@model IEnumerable<TrainerViewModel>

<partial name="_AlertMessages" />

<partial name="_PageHeader" model="@((string)null)" />

@if (Model != null && Model.Any())
{
	<div class="table bg-main">
		<table class="table table-responsive table-hover table-striped align-middle">
			<thead>
				<tr>
					<th>Name</th>
					<th class="d-none d-md-table-cell">Email</th>
					<th>Phone</th>
					<th>Specialization</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var trainer in Model)
				{
					<tr>
						<td class="fw-bold">@trainer.Name</td>
						<td class="d-none d-md-table-cell">@trainer.Email</td>
						<td>@trainer.Phone</td>
						<td><span class="badge text-bg-primary rounded-3">@trainer.specialization</span></td>
						<td class="text-center">
							<div class="dropdown">
								<button class="btn btn-link p-0 border-0" type="button"
										id="dropdownMenuButton-@trainer.Id" data-bs-toggle="dropdown"
										aria-expanded="false" aria-label="Actions menu">
									<i class="bi bi-three-dots-vertical fs-5"></i>
								</button>
								<ul class="dropdown-menu dropdown-menu-end"
									aria-labelledby="dropdownMenuButton-@trainer.Id">
									<li>
										<a asp-controller="Trainer" asp-action="TrainerDetails" asp-route-Id="@trainer.Id"
										   class="dropdown-item d-flex align-items-center gap-2">
											<i class="bi bi-info-circle"></i>
											<span>View Details</span>
										</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a asp-controller="Trainer" asp-action="TrainerEdit" asp-route-Id="@trainer.Id"
										   class="dropdown-item d-flex align-items-center gap-2">
											<i class="bi bi-pencil-square"></i>
											<span>Edit</span>
										</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a asp-controller="Trainer" asp-action="Delete" asp-route-Id="@trainer.Id"
										   class="dropdown-item d-flex align-items-center gap-2 text-danger">
											<i class="bi bi-trash"></i>
											<span>Delete</span>
										</a>
									</li>
								</ul>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<partial name="_EmptyState" model="@((string)null)" />
}

@section Scripts {
	<partial name="_AlertBoxScript" />
}