@using Core.ViewModels.TrainerViewModels
@model TrainerToUpdateViewModel
@{
	ViewData["Title"] = "Trainer Details";
}

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-primary rounded-4">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4 pb-3 border-bottom border-2 border-light">
                        @if (Model.CurrentPhotoUrl != null)
                        {
                            <img src="@Url.Content($"~/images/trainers/{Model.CurrentPhotoUrl}")" alt="@Model.Name" class="rounded-circle border border-3 border-primary shadow-lg"
                                 style="width: 120px; height: 120px; object-fit: cover;" onerror="this.src='@Url.Content("~/images/user.png")'" />
                        }
                        else
                        {
                            <img src="@Url.Content("~/images/user.png")" alt="@Model.Name" class="rounded-circle border border-3 border-primary shadow-lg"
                                 style="width: 120px; height: 120px; object-fit: cover;" />
                        }
                        <h3 class="mt-3 mb-1 fw-semibold text-body-emphasis lh-base">@Model.Name</h3>
                        <p class="text-muted mb-0">Edit trainer information</p>
                    </div>
                    <form asp-controller="Trainer" asp-action="TrainerEdit" method="post" enctype="multipart/form-data" novalidate>
                        <input asp-for="Name" type="hidden" />
                        <input asp-for="CurrentPhotoUrl" type="hidden" />

                        <!-- Personal Information -->
                        <div class="mb-5">
                            <h5 class="fw-bold text-secondary border-start border-4 border-primary ps-2 mb-3">
                                <i class="bi bi-person-circle me-2"></i>Personal Information
                            </h5>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="PhotoFile" class="form-label fw-semibold">Profile Photo</label>
                                    <div class="mb-3">
                                        <img id="photoPreview" src="@(Model.CurrentPhotoUrl != null ? Url.Content($"~/images/trainers/{Model.CurrentPhotoUrl}") : Url.Content("~/images/user.png"))" 
                                             alt="Photo Preview" 
                                             style="max-width: 150px; max-height: 150px;" 
                                             class="rounded-circle border border-3 border-primary shadow-sm" />
                                    </div>
                                    <input asp-for="PhotoFile" type="file" class="form-control form-control-lg rounded-3" accept="image/*" id="photoInput"/>
                                    <span asp-validation-for="PhotoFile" class="text-danger small"></span>
                                    <small class="form-text text-muted">Max size: 5 MB. Allowed types: JPG, PNG, JPEG. Leave empty to keep current photo.</small>
                                </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input asp-for="Email" name="Email" type="text" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Phone</label>
                                <input asp-for="Phone" name="Phone" type="text" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BuildingNumber" class="form-label">BuildingNumber</label>
                                <input asp-for="BuildingNumber" name="BuildingNumber" type="text" class="form-control" />
                                <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Street" class="form-label">Street</label>
                                <input asp-for="Street" name="Street" type="text" class="form-control" />
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                                <div class="col-md-6">
                                    <label asp-for="City" class="form-label fw-semibold">City <span class="text-danger">*</span></label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Professional Information -->
                        <div class="mb-5">
                            <h5 class="fw-bold text-secondary border-start border-4 border-info ps-2 mb-3">
                                <i class="bi bi-award me-2"></i>Professional Information
                            </h5>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label fw-semibold">
                                        Specialization <span class="text-danger">*</span>
                                    </label>
                                    <div class="d-flex flex-wrap gap-3">
                                        @foreach (var speciality in Enum.GetValues(typeof(Specialities)))
                                        {
                                            <div class="form-check">
                                                <input asp-for="Specialization" type="radio" value="@speciality" id="@speciality" class="form-check-input" />
                                                <label class="form-check-label" for="@speciality">@speciality</label>
                                            </div>
                                        }
                                    </div>
                                    <span asp-validation-for="Specialization" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between gap-3 border-top pt-4 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                                <i class="bi bi-check-lg"></i> Update Trainer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Preview photo before upload
        document.getElementById('photoInput')?.addEventListener('change', function(e) {
            var file = e.target.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('photoPreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}