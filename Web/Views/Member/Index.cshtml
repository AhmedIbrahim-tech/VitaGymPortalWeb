@using Core.ViewModels.MemberViewModels
@model IEnumerable<MemberViewModel>

<partial name="_AlertMessages" />

<partial name="_PageHeader" model="@((string)null)" />

@if (Model != null && Model.Any())
{
	<div class="card">
		<div class="card-body p-0">
			<div class="table-responsive">
				<table class="table datatable">
					<thead class="thead-light">
						<tr>
							<th class="no-sort">
								<label class="checkboxs">
									<input type="checkbox" id="select-all">
									<span class="checkmarks"></span>
								</label>
							</th>
							<th class="d-none d-lg-table-cell">Photo</th>
							<th>Name</th>
							<th class="d-none d-md-table-cell">Email</th>
							<th class="d-none d-lg-table-cell">Gender</th>
							<th>Phone</th>
							<th>Status</th>
							<th class="no-sort"></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var member in Model)
						{
							<tr>
								<td>
									<label class="checkboxs">
										<input type="checkbox">
										<span class="checkmarks"></span>
									</label>
								</td>
								<td class="d-none d-lg-table-cell">
									@if (member.Photo != null)
									{
										<img src="~/images/members/@member.Photo" alt="@member.Name" class="rounded-circle shadow-sm" width="45" height="45" />
									}
									else
									{
										<img src="~/images/user.png" alt="@member.Name" class="rounded-circle shadow-sm" width="45" height="45" />
									}
								</td>
								<td>@member.Name</td>
								<td class="d-none d-md-table-cell">@member.Email</td>
								<td class="d-none d-lg-table-cell">@member.Gender</td>
								<td>@member.Phone</td>
								<td>
									@if (!string.IsNullOrEmpty(member.MembershipEndDate) && DateTime.Parse(member.MembershipEndDate) > DateTime.Now)
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-success fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>Active
										</span>
									}
									else
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-danger fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>Inactive
										</span>
									}
								</td>
								<td class="action-table-data">
									<div class="edit-delete-action">
										<a asp-controller="Member" asp-action="MemberDetails" asp-route-Id="@member.Id" class="btn btn-icon btn-soft-info rounded-pill" title="View Details">
											<i data-feather="eye" class="feather-edit"></i>
										</a>
										<a asp-controller="Member" asp-action="MemberEdit" asp-route-Id="@member.Id" class="btn btn-icon btn-soft-success rounded-pill" title="Edit">
											<i data-feather="edit" class="feather-edit"></i>
										</a>
										@{
											var isActive = !string.IsNullOrEmpty(member.MembershipEndDate) && DateTime.Parse(member.MembershipEndDate) > DateTime.Now;
										}
										<form asp-controller="Member" asp-action="ToggleStatus" asp-route-id="@member.Id" method="post" class="d-inline">
											<button type="submit" class="btn btn-icon @(isActive ? "btn-soft-info" : "btn-soft-success") rounded-pill" title="@(isActive ? "Deactivate" : "Activate")">
												<i data-feather="@(isActive ? "x-circle" : "check-circle")" class="feather-edit"></i>
											</button>
										</form>
										<form asp-controller="Member" asp-action="Delete" asp-route-Id="@member.Id" method="post" class="d-inline"
											  onsubmit="return confirm('Are you sure you want to delete this member?');">
											<button type="submit" class="btn btn-icon btn-soft-danger rounded-pill" title="Delete">
												<i data-feather="trash-2" class="feather-trash-2"></i>
											</button>
										</form>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
}
else
{
	<partial name="_EmptyState" />
}

@section Scripts {
	<partial name="_AlertBoxScript" />
	<script>
		$(document).ready(function () {
			if (feather) {
				feather.replace();
			}
		});
	</script>
}


