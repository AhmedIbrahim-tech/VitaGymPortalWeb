@using Core.Modules.Members.ViewModels
@model IEnumerable<MemberViewModel>

<partial name="_AlertMessages" />

@{
    var pageTitle = ViewData["PageTitle"] as string;
}
<partial name="_PageHeader" model="@pageTitle" view-data='new ViewDataDictionary(ViewData)' />

@if (Model != null && Model.Any())
{
	<div class="card">
		<div class="card-body p-0">
			<div class="table-responsive">
				<table class="table datatable" id="membersTable">
					<thead class="thead-light">
						<tr>
							<th class="no-sort">
								<label class="checkboxs">
									<input type="checkbox" id="select-all">
									<span class="checkmarks"></span>
								</label>
							</th>
							<th class="d-none d-lg-table-cell">Photo</th>
							<th>Name</th>
							<th class="d-none d-md-table-cell">Email</th>
							<th class="d-none d-lg-table-cell">Gender</th>
							<th>Phone</th>
							<th>Status</th>
							<th class="no-sort"></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var member in Model)
						{
							var isActive = false;
							if (!string.IsNullOrEmpty(member.MembershipEndDate))
							{
								var endDate = DateTime.Parse(member.MembershipEndDate);
								isActive = endDate.Date >= DateTime.Now.Date;
							}
							
							<tr>
								<td>
									<label class="checkboxs">
										<input type="checkbox">
										<span class="checkmarks"></span>
									</label>
								</td>
								<td class="d-none d-lg-table-cell">
									@if (member.Photo != null)
									{
										<img src="~/images/members/@member.Photo" alt="@member.Name" class="rounded-circle shadow-sm" width="45" height="45" />
									}
									else
									{
										<img src="~/images/user.png" alt="@member.Name" class="rounded-circle shadow-sm" width="45" height="45" />
									}
								</td>
								<td>@member.Name</td>
								<td class="d-none d-md-table-cell">@member.Email</td>
								<td class="d-none d-lg-table-cell">@member.Gender</td>
								<td>@member.Phone</td>
								<td>
									@if (isActive)
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-success fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>Active
										</span>
									}
									else
									{
										<span class="d-inline-flex align-items-center p-1 pe-2 rounded-1 text-white bg-danger fs-10">
											<i class="ti ti-point-filled me-1 fs-11"></i>Inactive
										</span>
									}
								</td>
								<td class="action-table-data">
									<div class="edit-delete-action">
										<a asp-controller="Member" asp-action="MemberDetails" asp-route-Id="@member.Id" class="btn btn-icon btn-soft-info rounded-pill" title="View Details">
											<i data-feather="eye" class="feather-edit"></i>
										</a>
										<a asp-controller="Member" asp-action="MemberEdit" asp-route-Id="@member.Id" class="btn btn-icon btn-soft-success rounded-pill" title="Edit">
											<i data-feather="edit" class="feather-edit"></i>
										</a>
										<form asp-controller="Member" asp-action="ToggleStatus" asp-route-id="@member.Id" method="post" class="d-inline">
											<button type="submit" class="btn btn-icon @(isActive ? "btn-soft-info" : "btn-soft-success") rounded-pill" title="@(isActive ? "Deactivate" : "Activate")">
												<i data-feather="@(isActive ? "x-circle" : "check-circle")" class="feather-edit"></i>
											</button>
										</form>
										<button type="button" 
												class="btn btn-icon btn-soft-danger rounded-pill" 
												title="Delete"
												data-bs-toggle="modal" 
												data-bs-target="#deleteModal_@member.Id">
												<i data-feather="trash-2" class="feather-trash-2"></i>
											</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
}
else
{
	<partial name="_EmptyState" model="@((string)null)" view-data='new ViewDataDictionary(ViewData)' />
}

@foreach (var member in Model)
{
	var modalId = "deleteModal_" + member.Id;
	var message = "Are you sure you want to delete the member '" + member.Name + "'? This action cannot be undone.";
	
	var deleteModalViewData = new ViewDataDictionary(ViewData);
	deleteModalViewData["DeleteUrl"] = Url.Action("Delete", "Member");
	deleteModalViewData["ModalId"] = modalId;
	deleteModalViewData["Title"] = "Delete Member";
	deleteModalViewData["Message"] = message;
	deleteModalViewData["EntityId"] = member.Id;
	
	<partial name="_DeleteModal" view-data="deleteModalViewData" />
}

@section Scripts {
	<partial name="_AlertBoxScript" />
	<script>
		$(document).ready(function () {
			if (feather) {
				feather.replace();
			}

			// Check if DataTable is already initialized and destroy it first
			if ($.fn.DataTable.isDataTable('#membersTable')) {
				$('#membersTable').DataTable().destroy();
			}

			// Initialize DataTable
			var table = $('#membersTable').DataTable({
				"bFilter": true,
				"sDom": 'fBtlpi',
				"ordering": true,
				"language": {
					search: ' ',
					sLengthMenu: '_MENU_',
					searchPlaceholder: "Search",
					sLengthMenu: 'Row Per Page _MENU_ Entries',
					info: "_START_ - _END_ of _TOTAL_ items",
					paginate: {
						next: ' <i class=" fa fa-angle-right"></i>',
						previous: '<i class="fa fa-angle-left"></i> '
					},
				},
			});

		});
	</script>
}


