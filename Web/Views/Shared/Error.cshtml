@model ErrorViewModel
@{
    ViewData["Title"] = "500 - Internal Server Error";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-wrapper">
    <div class="error-box">
        <div class="error-img">
            <img src="~/images/error-500.png" class="img-fluid" alt="500 Error" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
            <div style="display: none; font-size: 120px; color: #dc3545; margin-bottom: 20px;">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>
        </div>
        <h3 class="h2 mb-3">@Model.Title</h3>
        <p>@Model.Message</p>
        <div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="bi bi-house-door me-2"></i>Back to Dashboard
            </a>
            <button onclick="window.history.back()" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Go Back
            </button>
        </div>
        @if (Model.ShowRequestId)
        {
            <div class="mt-4">
                <small class="text-muted">Request ID: <code>@Model.RequestId</code></small>
            </div>
        }
        @if (Model.ShowException && Model.Exception != null)
        {
            <div class="mt-4 alert alert-danger text-start">
                <h6 class="alert-heading">Exception Details:</h6>
                <p class="mb-1"><strong>Message:</strong> @Model.Exception.Message</p>
                @if (!string.IsNullOrEmpty(Model.Exception.StackTrace))
                {
                    <details class="mt-2">
                        <summary>Stack Trace</summary>
                        <pre class="mt-2 mb-0 small">@Model.Exception.StackTrace</pre>
                    </details>
                }
            </div>
        }
    </div>
</div>

<style>
    .error-box {
        text-align: center;
        padding: 60px 20px;
        max-width: 600px;
        margin: 0 auto;
    }

    .error-img {
        margin-bottom: 30px;
    }

    .error-img img {
        max-width: 400px;
        height: auto;
    }

    .error-box h3 {
        color: #333;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .error-box p {
        color: #666;
        font-size: 16px;
        margin-bottom: 30px;
    }
</style>

