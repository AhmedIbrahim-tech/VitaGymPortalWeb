@* 
    Enhanced Alert Box Script
    Auto-dismisses alerts after 5 seconds with smooth fade animation
    Supports multiple alerts on the same page
*@
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const alertBoxes = document.querySelectorAll("#Alert");
        
        alertBoxes.forEach(function(alertBox) {
            if (alertBox) {
                // Auto-dismiss after 5 seconds
                const dismissTimeout = setTimeout(() => {
                    alertBox.style.transition = "opacity 0.5s ease, transform 0.5s ease";
                    alertBox.style.opacity = "0";
                    alertBox.style.transform = "translateY(-10px)";
                    
                    setTimeout(() => {
                        alertBox.remove();
                    }, 500);
                }, 5000);
                
                // Clear timeout if user manually dismisses
                const closeButton = alertBox.querySelector('.btn-close');
                if (closeButton) {
                    closeButton.addEventListener('click', function() {
                        clearTimeout(dismissTimeout);
                    });
                }
            }
        });
    });
</script>
