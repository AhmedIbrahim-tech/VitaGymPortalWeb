@* 
    Reusable Page Header Partial
    Usage: <partial name="_PageHeader" />
    ViewData options:
    - PageTitle: Main title (default: "Page")
    - PageSubtitle: Subtitle text
    - PageIcon: Bootstrap icon name (default: "file-text")
    - ShowActionButton: Show action button (default: false)
    - ActionButtonText: Button text (default: "Add New")
    - ActionButtonUrl: Button URL (use Url.Action for Razor)
*@
@model string

@{
    var title = ViewData["PageTitle"] as string ?? Model ?? "Page";
    var subtitle = ViewData["PageSubtitle"] as string ?? "";
    var icon = ViewData["PageIcon"] as string ?? "file-text";
    var showActionButton = ViewData["ShowActionButton"] as bool? ?? false;
    var actionButtonText = ViewData["ActionButtonText"] as string ?? "Add New";
    var actionButtonUrl = ViewData["ActionButtonUrl"] as string ?? "#";
}

<div class="d-flex flex-wrap justify-content-between align-items-center mb-4 pb-3 border-bottom border-2 border-light">
    <div class="flex-grow-1">
        <h1 class="fw-semibold text-body-emphasis mb-2 d-flex align-items-center gap-3 lh-base">
            <i class="bi bi-@(icon) fs-2 text-primary"></i>
            <span>@title</span>
        </h1>
        @if (!string.IsNullOrEmpty(subtitle))
        {
            <p class="text-muted mb-0 mt-1">@subtitle</p>
        }
    </div>
    @if (showActionButton)
    {
        <div class="mt-2 mt-sm-0">
            <a href="@actionButtonUrl" class="btn btn-primary btn-lg shadow-sm rounded-3 d-flex align-items-center gap-2">
                <i class="bi bi-plus-circle"></i>
                <span>@actionButtonText</span>
            </a>
        </div>
    }
</div>
