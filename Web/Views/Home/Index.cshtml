@model AnalaticalViewModel
@{
	ViewData["Title"] = "Dashboard";
}

<div class="content">
		<div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-4">
			<div>
				<h1 class="mb-1">Welcome, Admin</h1>
				<p class="fw-medium">Gym Management Dashboard</p>
			</div>
			<div class="input-icon-start position-relative">
				<span class="input-icon-addon fs-16 text-gray-9">
					<i class="ti ti-calendar"></i>
				</span>
				<input type="text" class="form-control date-range bookingrange" placeholder="Select Date Range">
			</div>
		</div>

		<!-- Statistics Cards -->
		<div class="row">
			<div class="col-xl-3 col-sm-6 col-12 d-flex">
				<div class="card bg-primary sale-widget flex-fill">
					<div class="card-body d-flex align-items-center">
						<span class="sale-icon bg-white text-primary">
							<i class="ti ti-users fs-24"></i>
						</span>
						<div class="ms-2">
							<p class="text-white mb-1">Total Members</p>
							<div class="d-inline-flex align-items-center flex-wrap gap-2">
								<h4 class="text-white">@Model.TotalMembers</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xl-3 col-sm-6 col-12 d-flex">
				<div class="card bg-success sale-widget flex-fill">
					<div class="card-body d-flex align-items-center">
						<span class="sale-icon bg-white text-success">
							<i class="ti ti-user-check fs-24"></i>
						</span>
						<div class="ms-2">
							<p class="text-white mb-1">Active Members</p>
							<div class="d-inline-flex align-items-center flex-wrap gap-2">
								<h4 class="text-white">@Model.ActiveMembers</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xl-3 col-sm-6 col-12 d-flex">
				<div class="card bg-info sale-widget flex-fill">
					<div class="card-body d-flex align-items-center">
						<span class="sale-icon bg-white text-info">
							<i class="ti ti-user-star fs-24"></i>
						</span>
						<div class="ms-2">
							<p class="text-white mb-1">Total Trainers</p>
							<div class="d-inline-flex align-items-center flex-wrap gap-2">
								<h4 class="text-white">@Model.TotalTrainers</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xl-3 col-sm-6 col-12 d-flex">
				<div class="card bg-warning sale-widget flex-fill">
					<div class="card-body d-flex align-items-center">
						<span class="sale-icon bg-white text-warning">
							<i class="ti ti-calendar-event fs-24"></i>
						</span>
						<div class="ms-2">
							<p class="text-white mb-1">Upcoming Sessions</p>
							<div class="d-inline-flex align-items-center flex-wrap gap-2">
								<h4 class="text-white">@Model.UpcomingSessions</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Session Statistics -->
		<div class="row">
			<div class="col-xl-4 col-sm-6 col-12 d-flex">
				<div class="card revenue-widget flex-fill">
					<div class="card-body">
						<div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
							<div>
								<h4 class="mb-1">@Model.OngoingSessions</h4>
								<p>Ongoing Sessions</p>
							</div>
							<span class="revenue-icon bg-success-transparent text-success">
								<i class="ti ti-clock-play fs-16"></i>
							</span>
						</div>
						<div class="d-flex align-items-center justify-content-between">
							<p class="mb-0">Currently active training sessions</p>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xl-4 col-sm-6 col-12 d-flex">
				<div class="card revenue-widget flex-fill">
					<div class="card-body">
						<div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
							<div>
								<h4 class="mb-1">@Model.CompletedSessions</h4>
								<p>Completed Sessions</p>
							</div>
							<span class="revenue-icon bg-primary-transparent text-primary">
								<i class="ti ti-check fs-16"></i>
							</span>
						</div>
						<div class="d-flex align-items-center justify-content-between">
							<p class="mb-0">Total sessions completed</p>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xl-4 col-sm-6 col-12 d-flex">
				<div class="card revenue-widget flex-fill">
					<div class="card-body">
						<div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
							<div>
								<h4 class="mb-1">@Model.UpcomingSessions</h4>
								<p>Scheduled Sessions</p>
							</div>
							<span class="revenue-icon bg-info-transparent text-info">
								<i class="ti ti-calendar-check fs-16"></i>
							</span>
						</div>
						<div class="d-flex align-items-center justify-content-between">
							<p class="mb-0">Sessions scheduled for future</p>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Overview Cards -->
		<div class="row">
			<div class="col-xxl-8 col-xl-7 col-sm-12 col-12 d-flex">
				<div class="card flex-fill">
					<div class="card-header d-flex justify-content-between align-items-center">
						<div class="d-inline-flex align-items-center">
							<span class="title-icon bg-soft-primary fs-16 me-2"><i class="ti ti-chart-line"></i></span>
							<h5 class="card-title mb-0">Gym Overview</h5>
						</div>
					</div>
					<div class="card-body">
						<div class="row g-3">
							<div class="col-md-4">
								<div class="info-item border bg-light p-3 text-center">
									<div class="mb-2 text-primary fs-24">
										<i class="ti ti-users"></i>
									</div>
									<p class="mb-1">Total Members</p>
									<h5>@Model.TotalMembers</h5>
								</div>
							</div>
							<div class="col-md-4">
								<div class="info-item border bg-light p-3 text-center">
									<div class="mb-2 text-success fs-24">
										<i class="ti ti-user-check"></i>
									</div>
									<p class="mb-1">Active Members</p>
									<h5>@Model.ActiveMembers</h5>
								</div>
							</div>
							<div class="col-md-4">
								<div class="info-item border bg-light p-3 text-center">
									<div class="mb-2 text-info fs-24">
										<i class="ti ti-user-star"></i>
									</div>
									<p class="mb-1">Trainers</p>
									<h5>@Model.TotalTrainers</h5>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xxl-4 col-xl-5 d-flex">
				<div class="card flex-fill">
					<div class="card-header">
						<div class="d-inline-flex align-items-center">
							<span class="title-icon bg-soft-info fs-16 me-2"><i class="ti ti-info-circle"></i></span>
							<h5 class="card-title mb-0">Quick Actions</h5>
						</div>
					</div>
					<div class="card-body">
						<div class="d-grid gap-2">
							<a href="@Url.Action("Create", "Member")" class="btn btn-primary">
								<i class="ti ti-user-plus me-2"></i>Add New Member
							</a>
							<a href="@Url.Action("Create", "Trainer")" class="btn btn-info">
								<i class="ti ti-user-check me-2"></i>Add New Trainer
							</a>
							<a href="@Url.Action("Create", "Session")" class="btn btn-success">
								<i class="ti ti-calendar-event me-2"></i>Create Session
							</a>
							<a href="@Url.Action("Create", "Membership")" class="btn btn-warning">
								<i class="ti ti-id me-2"></i>Create Membership
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="copyright-footer d-flex align-items-center justify-content-between border-top bg-white gap-3 flex-wrap">
		<p class="fs-13 text-gray-9 mb-0">© @DateTime.Now.Year VitaGym Portal. All Rights Reserved</p>
		<p>Designed & Developed By <a href="javascript:void(0);" class="link-primary">VitaGym Team</a></p>
	</div>
