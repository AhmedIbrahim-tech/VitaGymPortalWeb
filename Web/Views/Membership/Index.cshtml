@using Core.ViewModels.MembershipViewModels
@model IEnumerable<MemberShipViewModel>

<partial name="_AlertMessages" />

<partial name="_PageHeader" model="@((string)null)" />

@if (Model != null && Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Member</th>
                            <th>Plan</th>
                            <th class="d-none d-md-table-cell">Start Date</th>
                            <th class="d-none d-md-table-cell">End Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.MemberName</td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <span class="fw-semibold">@item.PlanName</span>
                                        <span class="d-md-none text-muted small">from: @item.StartDate.ToString("MMM dd, yyyy")</span>
                                        <span class="d-md-none text-muted small">to: @item.EndDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">@item.StartDate.ToString("MMM dd, yyyy")</td>
                                <td class="d-none d-md-table-cell">@item.EndDate.ToString("MMM dd, yyyy")</td>
                                <td class="text-center">
                                    <form method="post" asp-action="Cancel" class="d-inline">
                                        <input type="hidden" name="id" value="@item.MemberId" />
                                        <button type="submit" class="btn btn-sm btn-danger d-flex align-items-center gap-1" 
                                                onclick="return confirm('Are you sure you want to cancel this membership?');">
                                            <i class="bi bi-x-circle"></i> Cancel
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <partial name="_EmptyState" model="@((string)null)" />
}