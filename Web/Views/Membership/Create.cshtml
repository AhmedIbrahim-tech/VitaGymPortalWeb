@using Core.ViewModels.MembershipViewModels
@model CreateMembershipViewModel

@{
    ViewData["Title"] = "Create Membership";
}

<partial name="_AlertMessages" />

<div class="container-fluid mb-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <!-- Header -->
                    <div class="d-flex align-items-center gap-3 mb-4 pb-3 border-bottom">
                        <div class="avatar-lg bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center">
                            <i class="bi bi-card-checklist fs-3 text-primary"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold text-body-emphasis mb-1">Create Membership</h3>
                            <p class="text-muted mb-0">Assign a plan to a member</p>
                        </div>
                    </div>

                    <!-- Form -->
                    <form asp-action="Create" method="post" novalidate>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger d-flex align-items-start gap-2" role="alert">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                <div>
                                    <strong>Please correct the following errors:</strong>
                                    <ul class="mb-0 mt-2">
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }

                        <div class="row g-4">
                            <!-- Member Selection -->
                            <div class="col-12">
                                <label asp-for="MemberId" class="form-label fw-semibold">
                                    <i class="bi bi-person me-2"></i>Member <span class="text-danger">*</span>
                                </label>
                                <select asp-for="MemberId" 
                                        asp-items="@(new SelectList(Model.Members, "Id", "Name"))" 
                                        class="form-select form-select-lg @(ViewData.ModelState["MemberId"]?.Errors.Count > 0 ? "is-invalid" : "")">
                                    <option value="">-- Select Member --</option>
                                </select>
                                <span asp-validation-for="MemberId" class="text-danger small d-block mt-1"></span>
                            </div>

                            <!-- Plan Selection -->
                            <div class="col-12">
                                <label asp-for="PlanId" class="form-label fw-semibold">
                                    <i class="bi bi-trophy me-2"></i>Plan <span class="text-danger">*</span>
                                </label>
                                <select asp-for="PlanId" 
                                        asp-items="@(new SelectList(Model.Plans, "Id", "Name"))" 
                                        class="form-select form-select-lg @(ViewData.ModelState["PlanId"]?.Errors.Count > 0 ? "is-invalid" : "")">
                                    <option value="">-- Select Plan --</option>
                                </select>
                                <span asp-validation-for="PlanId" class="text-danger small d-block mt-1"></span>
                            </div>

                            <!-- Start Date (Optional) -->
                            <div class="col-12">
                                <label asp-for="StartDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar3 me-2"></i>Start Date <span class="text-muted small">(Optional)</span>
                                </label>
                                <input asp-for="StartDate" 
                                       type="date" 
                                       class="form-control form-control-lg" 
                                       value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" />
                                <span asp-validation-for="StartDate" class="text-danger small d-block mt-1"></span>
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>Leave empty to start from today
                                </small>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between gap-3 border-top pt-4 mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg d-flex align-items-center gap-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg d-flex align-items-center gap-2">
                                <i class="bi bi-check-lg"></i> Create Membership
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Set default date to today if not set
            var startDateInput = $('input[name="StartDate"]');
            if (!startDateInput.val()) {
                var today = new Date().toISOString().split('T')[0];
                startDateInput.attr('min', today);
            }
        });
    </script>
}
