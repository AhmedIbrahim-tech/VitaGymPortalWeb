@using Core.ViewModels.MembershipViewModels
@model CreateMemberShipViewModel

@{
    ViewData["Title"] = "Create Membership";
}

<partial name="_AlertMessages" />

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border rounded-4">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center gap-2 mb-4">
                        <i class="bi bi-card-checklist fs-1 text-primary"></i>
                        <div>
                            <h3 class="fw-bold text-primary mb-0">Create Membership</h3>
                            <p class="text-muted mb-0">Assign a plan to a member</p>
                        </div>
                    </div>

                    <form asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="MemberId" class="form-label fw-semibold">
                                Member <span class="text-danger">*</span>
                            </label>
                            <select asp-for="MemberId" asp-items="ViewBag.Members" class="form-select">
                                <option value="">-- Select Member --</option>
                            </select>
                            <span asp-validation-for="MemberId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PlanId" class="form-label fw-semibold">
                                Plan <span class="text-danger">*</span>
                            </label>
                            <select asp-for="PlanId" asp-items="ViewBag.Plans" class="form-select">
                                <option value="">-- Select Plan --</option>
                            </select>
                            <span asp-validation-for="PlanId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-3 border-top pt-4 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                                <i class="bi bi-check-lg"></i> Create Membership
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
