@using Core.ViewModels.UserManagementViewModels
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="card shadow-sm rounded-4 border-0 bg-white">
    <div class="card-body p-4 p-md-5">
        <div class="d-flex align-items-center gap-3 mb-4 pb-3 border-bottom border-2 border-light">
            <div class="bg-warning-subtle rounded-4 p-3">
                <i class="bi bi-key fs-2 text-warning"></i>
            </div>
            <div>
                <h3 class="fw-semibold text-body-emphasis mb-1 lh-base">Change Password</h3>
                <p class="text-muted mb-0">Set a new password for this user</p>
            </div>
        </div>

        <form method="post" asp-action="ChangePassword" novalidate>
            <input asp-for="UserId" type="hidden" />
            
            <div class="row g-4">
                <div class="col-md-12">
                    <label asp-for="NewPassword" class="form-label fw-semibold">New Password <span class="text-danger">*</span></label>
                    <input asp-for="NewPassword" type="password" class="form-control form-control-lg rounded-3" placeholder="Enter new password">
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    <small class="form-text text-muted">Password must be at least 6 characters long</small>
                </div>
                <div class="col-md-12">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm Password <span class="text-danger">*</span></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg rounded-3" placeholder="Confirm new password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
            </div>

            <div class="alert alert-info mt-4" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Note:</strong> The new password will be sent to the user's email address.
            </div>

            <div class="d-flex justify-content-end gap-3 mt-4 pt-4 border-top border-2 border-light">
                <a asp-action="Index" class="btn btn-light btn-lg rounded-3 px-4">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-warning btn-lg rounded-3 px-4">
                    <i class="bi bi-key me-2"></i>Change Password
                </button>
            </div>
        </form>
    </div>
</div>

